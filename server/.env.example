# Server Environment Variables
# Copy this file to .env and update with your values

# ==================================
# Port Availability Check
# ==================================
# Before changing PORT, check if it's available:
#
# Windows:
#   netstat -ano | findstr :3001
#
# Linux/macOS:
#   lsof -i :3001
#   # Or use: netstat -tuln | grep :3001
#
# If port is in use, either:
#   1. Stop the process using that port
#   2. Change PORT below to an available port

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration
# Format: postgres://username:password@host:port/database
DATABASE_URL=postgres://user:password@postgres:5432/library

# JWT Secret - IMPORTANT: Change this to a long random string in production!
# Generate one using: openssl rand -hex 32
JWT_SECRET=1ab773f62875b39683177b36ce4bbb18fed5bd539618c53b732c07e2eb941f29

# Google Books API (Optional)
# Get your API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=

# Client URL (for CORS)
CLIENT_URL=http://localhost:3000

# Error Monitoring (Optional - Sentry)
# Get your DSN from: https://sentry.io/
# Format: https://your-key@sentry.io/your-project-id
SENTRY_DSN=
# Optional: Set release version for tracking deployments
SENTRY_RELEASE=

# Email/SMTP Configuration (Optional - for email notifications)
# Enable email notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# SMTP Server Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=library@example.com

# Overdue Notifications
# Enable/disable overdue loan checks
ENABLE_OVERDUE_CHECKS=true
# Interval in minutes (default: 60)
OVERDUE_CHECK_INTERVAL=60
