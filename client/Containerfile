# ------------------------------------------------------
# Stage 1: Build the application
# ------------------------------------------------------
FROM node:24-alpine AS build

# Accept build arguments for Vite environment variables
ARG VITE_API_URL
ARG VITE_LIBRARY_NAME
ARG VITE_LIBRARY_LOGO

# Set them as environment variables for the build
ENV VITE_API_URL=$VITE_API_URL
ENV VITE_LIBRARY_NAME=$VITE_LIBRARY_NAME
ENV VITE_LIBRARY_LOGO=$VITE_LIBRARY_LOGO

WORKDIR /app

# Copy package files only
COPY package*.json pnpm-lock.yaml ./

# Install pnpm
RUN npm install -g pnpm

# Install dependencies
RUN pnpm install --frozen-lockfile

# Copy all project files
COPY . .

# Build (environment variables are now available)
RUN pnpm build

# ------------------------------------------------------
# Stage 2: Serve with a lightweight image
# ------------------------------------------------------
FROM node:24-alpine

WORKDIR /app

# Install `serve` to act as a production static server
RUN npm install -g serve

# Copy the built output from the build stage
COPY --from=build /app/dist ./dist

EXPOSE 3000

# Serve the 'dist' folder as a single-page application on port 3000
CMD ["serve", "-s", "dist", "-l", "3000"]
