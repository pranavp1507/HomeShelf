# Environment Variables for Local Docker Builds
# Copy this to .env and update with your values
#
# Deployment files:
#   - compose.dev.yml: Simple localhost development (no Traefik)
#   - compose.yml: Production with Traefik HTTPS
#   - compose.ghcr.yml: Pre-built images from GitHub Container Registry
#
# For pre-built images from GHCR: Use .env.ghcr.example instead

# ==================================
# Traefik Configuration (compose.yml only)
# ==================================
# Host name for Traefik reverse proxy
# Add this to your /etc/hosts file (Linux/Mac) or C:\Windows\System32\drivers\etc\hosts (Windows):
#   127.0.0.1  homelib.local
TRAEFIK_HOST=homelib.local

# Traefik HTTPS port (external access)
TRAEFIK_HTTPS_PORT=443

# Traefik Dashboard port
TRAEFIK_DASHBOARD_PORT=8080

# ==================================
# Branding Customization (Build-time)
# ==================================
# These variables are used when building the client Docker image.
# They are compiled into the JavaScript bundle.
#
# Library name displayed in the UI
VITE_LIBRARY_NAME=HomeShelf

# Logo path or URL
# Options:
#   - Local: /Logo.svg (served from public folder)
#   - External: https://your-domain.com/logo.png
VITE_LIBRARY_LOGO=/Logo.svg

# ==================================
# Port Configuration
# ==================================
# Check port availability before changing:
#
# Windows:
#   netstat -ano | findstr :3000
#   netstat -ano | findstr :3001
#   netstat -ano | findstr :5432
#
# Linux/macOS:
#   lsof -i :3000
#   lsof -i :3001
#   lsof -i :5432

# Client port (host-side only, internal port is always 3000)
CLIENT_PORT=3000

# Server port (host-side only, internal port is always 3001)
SERVER_PORT=3001

# Database port
POSTGRES_PORT=5432

# ==================================
# Database Configuration
# ==================================
POSTGRES_USER=library_user
POSTGRES_PASSWORD=change_this_secure_password

# ==================================
# JWT Configuration (REQUIRED)
# ==================================
# Generate a secure secret with: openssl rand -hex 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# ==================================
# Server Configuration
# ==================================
NODE_ENV=production
CLIENT_URL=http://localhost:3000

# ==================================
# Google Books API (Optional)
# ==================================
# Get API key from: https://console.cloud.google.com/apis/credentials
GOOGLE_BOOKS_API_KEY=

# ==================================
# Email/SMTP Configuration (Optional)
# ==================================
ENABLE_EMAIL_NOTIFICATIONS=false
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=library@example.com

# ==================================
# Overdue Notifications
# ==================================
ENABLE_OVERDUE_CHECKS=true
OVERDUE_CHECK_INTERVAL=60

# ==================================
# Error Monitoring (Optional - Sentry)
# ==================================
# Get your DSN from: https://sentry.io/
SENTRY_DSN=
SENTRY_RELEASE=
